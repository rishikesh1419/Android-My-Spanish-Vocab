<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <EditText
        android:id="@+id/wordEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Word"
        android:gravity="center_horizontal"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"
        android:gravity="center_horizontal"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2" >

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/custom_button_bg"
                android:button="@android:color/transparent"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Adjective"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButton8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/custom_button_bg"
                android:button="@android:color/transparent"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Article"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/custom_button_bg"
                android:button="@android:color/transparent"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Adverb"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButton100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/custom_button_bg"
                android:button="@android:color/transparent"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Conjunction"
                android:textSize="20sp" />

        </RadioGroup>


        <RadioGroup
            android:id="@+id/rg2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/custom_button_bg"
                android:button="@android:color/transparent"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Verb"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButton8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/custom_button_bg"
                android:button="@android:color/transparent"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Pronoun"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/custom_button_bg"
                android:button="@android:color/transparent"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Preposition"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButton100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/custom_button_bg"
                android:button="@android:color/transparent"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Interjection"
                android:textSize="20sp" />

        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:id="@+id/nounRb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_bg"
            android:button="@android:color/transparent"
            android:paddingStart="35dp"
            android:paddingTop="3dp"
            android:paddingEnd="35dp"
            android:paddingBottom="3dp"
            android:text="Noun"
            android:textSize="20sp" />
    </LinearLayout>


    <RadioGroup
        android:id="@+id/genderRg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="2">

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_bg"
            android:button="@android:color/transparent"
            android:gravity="center_horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Muscular"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_bg"
            android:button="@android:color/transparent"
            android:gravity="center_horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Feminine"
            android:textSize="20sp" />
    </RadioGroup>


</LinearLayout>
